/**index.wxss**/
.change {
	color: #fff;
	background-color: #009384;
	font-size: 35rpx;
	padding: 20rpx 40rpx;
	display: flex;
	align-items: center;
	box-shadow:0px 8rpx 30rpx #aaa;
}
.change .icon-down{
	color: #fff;
	font-size: 20rpx;
}
.change .left-number {
	color: #8bcdc7;
	position: absolute;
	right: 50rpx;
}
.input-area {
	position: relative;
}
.textarea-wrap {
	font-size: 35rpx;
	background: #009384;
}
.input-area textarea {
	background: #009384;
	color: #fff;
	padding: 30rpx 30rpx 30rpx 30rpx;
	width: 100%;
	margin: 0;
	box-sizing: border-box;
}
.input-area .icon-close {
	position: absolute;
	right: 12rpx;
	top: 20rpx;
	z-index: 100;
	font-size: 40rpx;
	color: #888;
}
.text-area {
	min-height: 80rpx;
	margin: 30rpx 15rpx;
	padding: 40rpx;
	background-color: #fff;
	box-shadow:0px 8rpx 30rpx #aaa;
}
.text-title {
  font-size: 28rpx;
  color: #8995a1;
}
.text-result {
  padding: 20rpx 0;
}
.input-translate {
	width: 120rpx;
	height: 120rpx;
	border: 0;
	border-radius: 50%;
	background-color: #009384;
	box-shadow:0px 8rpx 30rpx #aaa;
	line-height: 120rpx;
	position: absolute;
	bottom: 60rpx;
	right: 60rpx;
}
.input-translate .icon-fanyi {
	font-size: 60rpx;
	color: #fff;
}